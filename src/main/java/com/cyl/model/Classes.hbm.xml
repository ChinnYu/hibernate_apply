<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cyl.model">
    <class name="Classes" table="t_classes">
        <!--主鍵用id標籤來描述-->
        <id name="id" column="id">
            <!--native 會根據實際的數據庫來採用具體的主键生成策略-->
            <generator class="native"/>
        </id>
        <!--其他普通的行用property來描述-->
        <property name="name"/>
        <!--建立多對多的關係-->
        <set name="teachers" table="t_teacher_classes" cascade="save-update">
            <!--設置當前表在關係表的外鍵-->
            <key column="classes_id"></key>
            <!--設置多對多的關係 設置對方的外鍵-->
            <many-to-many column="teacher_id" class="Teacher"></many-to-many>
        </set>
    </class>
</hibernate-mapping>