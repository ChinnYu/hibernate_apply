<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cyl.model">
    <!--optimistic-lock="version" 樂觀鎖的方法是採用版本號的方案-->
    <class name="User" table="t_user" optimistic-lock="version">
        <!--主鍵用id標籤來描述-->
        <id name="id" column="id">
            <!--native 會根據實際的數據庫來採用具體的主键生成策略-->
            <generator class="native"/>
        </id>
        <version name="version"></version>
        <!--其他普通的行用property來描述-->
        <!--1.簡化,名稱相同,可以不寫-->
        <property name="birthday" type="timestamp"/>
        <!--2.簡化,名稱相同,可以不寫 ,type也可以不寫 會自動識別-->
        <property name="username"/>
        <!--3.原始寫法-->
        <property name="password" type="string" column="password"/>
        <!--建立一對多的關係-->
        <!--默認兩者的關係由一的一方來為護-->
        <!--改變,讓多的一方來維護這個關係-->
        <!--inverse 反轉 默認false-->
        <!--cascade="save-update,delete" 會將關聯數據一併刪除-->
        <set name="orders" inverse="true" cascade="save-update,delete">
            <!--設置外鍵-->
            <key column="user_id"></key>
            <one-to-many class="Order"/>
        </set>
    </class>
</hibernate-mapping>